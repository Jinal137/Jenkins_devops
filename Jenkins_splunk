pipeline {
    agent { label 'node1' }
    environment {

        splunkTgz = 'splunk.tgz'
        REMOTE_HOST = 'jenkins@192.168.52.39'
    }


    stages {
        stage('Check File Exist') {
            steps {
                script {

                    if (!fileExists(${env.splunkTgz})) {
                        error "Splunk tgz file not found in workspace."
                    }
                }
            }
        }

        stage('Transfer Splunk') {
            steps {
                script {
                    def splunkTgz = ${env.splunkTgz}
                    def targetInstance = ${env.REMOTE_HOST}

                    sh "scp ${env.splunkTgz} ${env.REMOTE_HOST}:/tmp/"
                }
            }
        }

        stage('Install Splunk') {
            steps {
                script {
                   
                    sh """
                        ssh ${env.REMOTE_HOST}
                        cd /tmp
                        tar -xzvf splunk.tgz
                        ./splunk/bin/splunk start
                     
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Splunk installation completed successfully.'
        }
        failure {
            echo 'Error during the Splunk installation.'
        }
    }
}

