pipeline {
    agent { label 'node1' }
    environment {

        splunkTgz = 'splunk.tgz'
        REMOTE_HOST = 'jenkins@192.168.52.39'
    }


    stages {
       
	stage('Transfer Splunk') {
            steps {
                script {
                    def splunkTgz = ${splunkTgz}
                    def targetInstance = ${REMOTE_HOST}

                    sh "scp ${splunkTgz} ${targetInstance}:/tmp/"
                }
            }
        }

        stage('Install Splunk') {
            steps {
                script {
                    def targetInstance = 'jenkins@192.168.29.172'
                   
                    sh """
                        ssh ${targetInstance}
                        cd /tmp
                        tar -xzvf splunk.tgz
                        ./splunk/bin/splunk start
                     
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Splunk installation completed successfully.'
        }
        failure {
            echo 'Error during the Splunk installation.'
        }
    }
}

